---
const { Component, props } = Astro.props;
const { src, alt, wideImage, description } = props;

const componentData = {
    src: src.startsWith('http') ? src : `${import.meta.env.BASE_URL}${src}`,
    alt: alt || "",
    wide: wideImage || false,
    description: description
};
---

<Component {...componentData}>
    <slot />
    {description}
</Component>
