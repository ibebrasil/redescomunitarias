---
const { Component, props } = Astro.props;
const { imageLeft, imageRight, caption } = props;

let imageLeftSrc;
let imageRightSrc;

if (imageLeft) {
    imageLeftSrc = imageLeft.startsWith('http') ? imageLeft : `${import.meta.env.BASE_URL}${imageLeft}`;
}

if (imageRight) {
    imageRightSrc = imageRight.startsWith('http') ? imageRight : `${import.meta.env.BASE_URL}${imageRight}`;
}
---

<Component imageLeft={imageLeftSrc} imageRight={imageRightSrc} caption={caption} >
  <slot />
</Component>
